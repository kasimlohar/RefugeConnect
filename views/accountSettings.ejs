<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Account Settings - RefugeConnect</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/styles.css">
    <style>
        .settings-container {
            background-color: #F4F6F8;
            min-height: 100vh;
            padding: 2rem 1rem;
        }
        .settings-sidebar {
            background-color: #FFFFFF;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .settings-sidebar .nav-link {
            color: #2C3E50;
            font-weight: 500;
            padding: 0.75rem 1rem;
            border-radius: 5px;
        }
        .settings-sidebar .nav-link.active {
            background-color: #1ABC9C;
            color: #FFFFFF;
        }
        .settings-card {
            background-color: #FFFFFF;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 1.5rem;
        }
        .settings-card h5 {
            color: #2C3E50;
        }
        .settings-card .form-label {
            font-weight: 500;
        }
        .settings-card .form-check-label {
            font-weight: 400;
            color: #7F8C8D;
        }
        .btn-save {
            background-color: #F39C12;
            border: none;
        }
        .btn-save:hover {
            background-color: #E67E22;
        }
    </style>
</head>
<body>
    <%- include('partials/header') %>

    <div class="settings-container">
        <div class="container">
            <div class="row g-4">
                <!-- Sidebar -->
                <div class="col-lg-3">
                    <div class="settings-sidebar p-3">
                        <div class="nav flex-column nav-pills">
                            <a class="nav-link active mb-2" href="#personal">
                                <i class="fas fa-user me-2"></i>Personal Information
                            </a>
                            <a class="nav-link mb-2" href="#privacy">
                                <i class="fas fa-shield-alt me-2"></i>Privacy & Security
                            </a>
                            <a class="nav-link mb-2" href="#notifications">
                                <i class="fas fa-bell me-2"></i>Notifications
                            </a>
                            <a class="nav-link mb-2" href="#language">
                                <i class="fas fa-language me-2"></i>Language
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Main Content -->
                <div class="col-lg-9">
                    <h2 class="mb-4">Account Settings</h2>
                    <form id="settings-form">
                        <!-- Personal Information -->
                        <div class="settings-card mb-4" id="personal">
                            <h5 class="mb-3">Personal Information</h5>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label">First Name</label>
                                    <input type="text" class="form-control" value="<%= user.firstName || 'Sarah' %>">
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Last Name</label>
                                    <input type="text" class="form-control" value="<%= user.lastName || 'Ahmed' %>">
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Email</label>
                                    <input type="email" class="form-control" value="<%= user.email || 'sarah@example.com' %>">
                                </div>
                                <div class="col-md-6"></div>
                                    <label class="form-label">Phone</label>
                                    <input type="tel" class="form-control" value="<%= user.phone || '+1234567890' %>">
                                </div>
                            </div>
                        </div>

                        <!-- Privacy & Security -->
                        <div class="settings-card mb-4" id="privacy">
                            <h5 class="mb-3">Privacy & Security</h5>
                            <div class="form-check form-switch mb-3">
                                <input class="form-check-input" type="checkbox" checked>
                                <label class="form-check-label">Data Sharing</label>
                                <small class="d-block text-muted">Allow sharing of non-sensitive data to improve services</small>
                            </div>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" checked>
                                <label class="form-check-label">Profile Visibility</label>
                                <small class="d-block text-muted">Make your profile visible to verified organizations</small>
                            </div>
                        </div>

                        <!-- Notifications -->
                        <div class="settings-card mb-4" id="notifications">
                            <h5 class="mb-3">Notifications</h5>
                            <div class="form-check form-switch mb-3">
                                <input class="form-check-input" type="checkbox" checked>
                                <label class="form-check-label">Email Notifications</label>
                                <small class="d-block text-muted">Receive updates and alerts via email</small>
                            </div>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox">
                                <label class="form-check-label">SMS Alerts</label>
                                <small class="d-block text-muted">Receive important alerts via SMS</small>
                            </div>
                        </div>

                        <!-- Language -->
                        <div class="settings-card mb-4" id="language">
                            <h5 class="mb-3">Language Settings</h5>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label">Primary Language</label>
                                    <select class="form-select">
                                        <option value="en" selected>English</option>
                                        <option value="es">Español</option>
                                        <option value="ar">العربية</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Secondary Language</label>
                                    <select class="form-select">
                                        <option value="">None</option>
                                        <option value="en">English</option>
                                        <option value="es">Español</option>
                                        <option value="ar">العربية</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="text-end">
                            <button type="submit" class="btn btn-save">
                                <i class="fas fa-save me-2"></i>Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
