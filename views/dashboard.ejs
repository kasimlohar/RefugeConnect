<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - RefugeConnect</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <%- include('partials/header') %>

    <!-- Sidebar -->
    <div class="offcanvas-lg offcanvas-start" id="sidebar">
        <div class="offcanvas-header d-lg-none">
            <h5 class="offcanvas-title">Menu</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" data-bs-target="#sidebar"></button>
        </div>
        <div class="offcanvas-body p-0">
            <div class="d-flex flex-column h-100">
                <ul class="nav nav-pills flex-column mb-auto p-3">
                    <li class="nav-item">
                        <a href="/dashboard" class="nav-link active">
                            <i class="fas fa-home me-2"></i>Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/saved" class="nav-link text-dark">
                            <i class="fas fa-bookmark me-2"></i>Saved
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/settings" class="nav-link text-dark">
                            <i class="fas fa-cog me-2"></i>Settings
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <main class="content p-4 mt-5">
        <div class="container-fluid">
            <!-- Job Opportunities -->
            <section class="mb-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4>Job Opportunities</h4>
                    <a href="/jobs" class="btn btn-outline-primary btn-sm">View All</a>
                </div>
                <div class="row g-3">
                    <% jobs.forEach(job => { %>
                        <div class="col-md-4">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h5 class="card-title"><%= job.title %></h5>
                                    <p class="card-text text-muted">
                                        <i class="fas fa-building me-2"></i><%= job.company %>
                                    </p>
                                    <p class="card-text">
                                        <i class="fas fa-map-marker-alt me-2"></i><%= job.location %>
                                    </p>
                                    <a href="/jobs/<%= job.id %>" class="btn btn-outline-primary">Learn More</a>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </section>

            <!-- Housing Options -->
            <section class="mb-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4>Housing Options</h4>
                    <a href="/housing" class="btn btn-outline-primary btn-sm">View All</a>
                </div>
                <div class="row g-3">
                    <% housing.forEach(house => { %>
                        <div class="col-md-4">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h5 class="card-title"><%= house.type %></h5>
                                    <p class="card-text">
                                        <i class="fas fa-dollar-sign me-2"></i><%= house.price %>
                                    </p>
                                    <p class="card-text">
                                        <i class="fas fa-map-marker-alt me-2"></i><%= house.location %>
                                    </p>
                                    <a href="/housing/<%= house.id %>" class="btn btn-outline-primary">View Details</a>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </section>

            <!-- Healthcare Services -->
            <section class="mb-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4>Healthcare Services</h4>
                    <a href="/healthcare" class="btn btn-outline-primary btn-sm">View All</a>
                </div>
                <div class="row g-3">
                    <% healthcare.forEach(service => { %>
                        <div class="col-md-4">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h5 class="card-title"><%= service.name %></h5>
                                    <p class="card-text">
                                        <i class="fas fa-clinic-medical me-2"></i><%= service.type %>
                                    </p>
                                    <p class="card-text">
                                        <i class="fas fa-map-marker-alt me-2"></i><%= service.location %>
                                    </p>
                                    <a href="/healthcare/<%= service.id %>" class="btn btn-outline-primary">Learn More</a>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </section>
        </div>
    </main>

    <%- include('partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
