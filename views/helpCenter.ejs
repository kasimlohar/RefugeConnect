<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Help Center - RefugeConnect</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
        <div class="container">
            <a class="navbar-brand" href="/">RefugeConnect</a>
            <form class="d-flex mx-auto w-50">
                <div class="input-group">
                    <span class="input-group-text bg-white">
                        <i class="fas fa-search text-muted"></i>
                    </span>
                    <input type="search" class="form-control border-start-0" placeholder="Search help articles...">
                </div>
            </form>
            <div class="ms-auto d-flex align-items-center gap-3">
                <select class="form-select-sm">
                    <option>English</option>
                    <option>español</option>
                    <option>العربية</option>
                </select>
                <a href="/login" class="btn btn-outline-primary">Sign In</a>
                <a href="/signup" class="btn btn-primary">Sign Up</a>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <div class="bg-light py-5 text-center">
        <div class="container">
            <h1 class="display-4 mb-4">How can we help you?</h1>
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="input-group input-group-lg">
                        <input type="search" class="form-control" placeholder="Search for help...">
                        <button class="btn btn-primary">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Help Categories -->
    <section class="py-5">
        <div class="container">
            <div class="row g-4">
                <% categories.forEach(category => { %>
                    <div class="col-md-3">
                        <div class="card h-100 text-center">
                            <div class="card-body">
                                <i class="<%= category.icon %> fa-3x mb-3 text-primary"></i>
                                <h5 class="card-title"><%= category.title %></h5>
                                <p class="card-text text-muted"><%= category.description %></p>
                                <a href="<%= category.link %>" class="btn btn-outline-primary">Learn More</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </section>

    <!-- Popular Topics -->
    <section class="py-5 bg-light">
        <div class="container">
            <h2 class="mb-4">Popular Topics</h2>
            <div class="row">
                <div class="col-md-6">
                    <h5 class="mb-3">Getting Started</h5>
                    <ul class="list-unstyled">
                        <% gettingStarted.forEach(topic => { %>
                            <li class="mb-2">
                                <i class="fas fa-arrow-right text-primary me-2"></i>
                                <a href="<%= topic.link %>" class="text-decoration-none"><%= topic.title %></a>
                            </li>
                        <% }); %>
                    </ul>
                </div>
                <div class="col-md-6">
                    <h5 class="mb-3">Common Issues</h5>
                    <ul class="list-unstyled">
                        <% commonIssues.forEach(issue => { %>
                            <li class="mb-2">
                                <i class="fas fa-exclamation-circle text-warning me-2"></i>
                                <a href="<%= issue.link %>" class="text-decoration-none"><%= issue.title %></a>
                            </li>
                        <% }); %>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Support -->
    <section class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h3>Contact Support</h3>
                    <form id="support-form" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label class="form-label">Name</label>
                            <input type="text" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input type="email" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Subject</label>
                            <input type="text" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Message</label>
                            <textarea class="form-control" rows="4" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Send Message</button>
                    </form>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body text-center">
                            <i class="fas fa-robot fa-3x text-primary mb-3"></i>
                            <h4>AI Assistant</h4>
                            <p class="text-muted">Available 24/7 for instant help</p>
                            <div class="d-grid">
                                <a href="/chat" class="btn btn-primary">
                                    <i class="fas fa-comments me-2"></i>Start Chat
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer py-5 bg-light border-top">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4 mb-md-0">
                    <h5>RefugeConnect</h5>
                    <p class="text-muted">Supporting refugee communities</p>
                </div>
                <div class="col-md-4 mb-4 mb-md-0">
                    <h5>Resources</h5>
                    <ul class="list-unstyled">
                        <li><a href="/help" class="text-muted">Help Center</a></li>
                        <li><a href="/docs" class="text-muted">Documentation</a></li>
                        <li><a href="/community" class="text-muted">Community</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5>Legal</h5>
                    <ul class="list-unstyled">
                        <li><a href="/privacy" class="text-muted">Privacy Policy</a></li>
                        <li><a href="/terms" class="text-muted">Terms of Service</a></li>
                        <li><a href="/security" class="text-muted">Security</a></li>
                    </ul>
                </div>
            </div>
            <hr>
            <p class="text-center text-muted mb-0">© 2025 RefugeConnect. All rights reserved.</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
