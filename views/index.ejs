<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="<%= seoDescription || 'Empowering refugees with tools and resources for a better future.' %>">
    <meta name="keywords" content="<%= seoKeywords || 'refugees, support, housing, jobs, education, healthcare' %>">
    <meta name="author" content="RefugeConnect">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
    <style>
        .hero {
            background: linear-gradient(to right, #2C3E50, #1ABC9C);
            color: #FFFFFF;
            padding: 4rem 0;
        }
        .hero-title {
            font-size: 3rem;
            font-weight: bold;
            margin-bottom: 1rem;
        }
        .hero-subtitle {
            font-size: 1.2rem;
            margin-bottom: 2rem;
        }
        .hero-image {
            max-width: 100%;
            height: auto;
            border-radius: 0.5rem;
        }
        .feature-card {
            background-color: #F4F6F8;
            border: none;
            border-radius: 0.5rem;
            padding: 2rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }
        .feature-card:hover {
            transform: translateY(-5px);
        }
        .feature-icon {
            font-size: 3rem;
            color: #1ABC9C;
            margin-bottom: 1rem;
        }
        .how-we-help {
            padding: 4rem 0;
        }
        .section-title {
            font-size: 2rem;
            font-weight: bold;
            color: #2C3E50;
        }
        .section-subtitle {
            font-size: 1.1rem;
            color: #7F8C8D;
            margin-bottom: 2rem;
        }
    </style>
</head>
<body>
    <%- include('partials/header', { translations: translations }) %>

    <!-- Hero Section -->
    <section class="hero">
        <div class="container text-center text-lg-start">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h1 class="hero-title"><%= heroTitle || 'Empowering Refugees Through AI Support' %></h1>
                    <p class="hero-subtitle"><%= heroSubtitle || 'Your trusted companion for a smoother transition into your new community.' %></p>
                    <div class="d-flex justify-content-center justify-content-lg-start gap-3 mt-4">
                        <a href="<%= getStartedLink || '/get-started' %>" class="btn btn-primary btn-lg">Get Started</a>
                        <a href="<%= learnMoreLink || '/learn-more' %>" class="btn btn-outline-secondary btn-lg">Learn More</a>
                    </div>
                </div>
                <div class="col-lg-6 text-center">
                    <img src="<%= heroImage || '/images/welcome-illustration.jpeg' %>" alt="Welcome" class="hero-image">
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="features py-5">
        <div class="container text-center">
            <h2 class="section-title"><%= featuresTitle || 'Why Choose RefugeConnect?' %></h2>
            <p class="section-subtitle"><%= featuresSubtitle || 'We provide tools and resources to help you integrate seamlessly.' %></p>
            <div class="row g-4 mt-4">
                <% features.forEach(feature => { %>
                    <div class="col-md-3">
                        <div class="feature-card">
                            <i class="<%= feature.icon %> feature-icon"></i>
                            <h5><%= feature.title %></h5>
                            <p><%= feature.description %></p>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </section>

    <!-- How We Help Section -->
    <section class="how-we-help py-5 bg-light">
        <div class="container">
            <h2 class="section-title text-center"><%= howWeHelpTitle || 'How We Help You' %></h2>
            <p class="section-subtitle text-center"><%= howWeHelpSubtitle || 'Explore our key services designed to support your journey.' %></p>
            <div class="row g-4 mt-4">
                <% services.forEach(service => { %>
                    <div class="col-md-4">
                        <div class="card h-100">
                            <div class="card-body text-center">
                                <i class="<%= service.icon %> fa-2x mb-3 text-primary"></i>
                                <h5 class="card-title"><%= service.title %></h5>
                                <p class="card-text"><%= service.description %></p>
                                <a href="<%= service.link %>" class="btn btn-link">Learn More</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </section>

    <%- include('partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
